<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/temp_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/padding_5">

    <TextView
        android:id="@+id/nameStr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_weight="2"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/blue_steel"
        android:textSize="@dimen/default_bit_text_size_20"
        android:textStyle="bold"
        tools:text="水调歌头,明月几时有,把酒问青天" />

    <CheckBox
        android:id="@+id/translate"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@drawable/check_bg_yi"
        android:button="@null"
        android:textSize="@dimen/default_medium_text_size" />

    <CheckBox
        android:id="@+id/annotation"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@drawable/check_bg_zhu"
        android:button="@null"
        android:textSize="@dimen/default_medium_text_size" />

    <CheckBox
        android:id="@+id/appreciate"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/check_bg_shang"
        android:button="@null"
        android:textSize="@dimen/default_medium_text_size" />

</LinearLayout>